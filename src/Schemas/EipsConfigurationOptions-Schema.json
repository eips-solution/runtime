{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "EnterpriseInPrivateSaas.ConfigurationOptions",
    "description": "企业私有化 SaaS 服务配置选项 - 校验架构",
    "type": "object",
    "required": ["eips"],
    "properties": {
        "eips": {
            "description": "企业私有化 SaaS 服务配置",
            "type": "object",
            "properties": {
                "utilities": {
                    "description": "企业私有化 SaaS 服务 - 工具配置",
                    "type": "object",
                    "properties": {
                        "nanoid": {
                            "description": "生成 NanoId 所需的配置选项",
                            "type": "object",
                            "properties": {
                                "alphabet": {
                                    "description": "生成 NanoId 所需的字母表",
                                    "type": "string",
                                    "minLength": 62,
                                    "default": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_-"
                                },
                                "size": {
                                    "description": "生成 NanoId 的长度",
                                    "type": "integer",
                                    "minimum": 8,
                                    "default": 21
                                }
                            }
                        }
                    }
                },
                "connectionStrings": {
                    "description": "连接串配置",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["name", "connectionString"],
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "连接串名称",
                                "minLength": 1
                            },
                            "connectionString": {
                                "description": "连接串",
                                "type": "string",
                                "minLength": 1
                            },
                            "providerName": {
                                "type": "string",
                                "description": "连接程序名称",
                                "enum": ["System.Data.SqlClient", "System.Data.MySQL", "System.Data.PostgreSQL", "System.Data.Oracle", "System.Data.SQLite", "System.Data.MariaDB", "System.Data.Redis", "System.Data.MongoDB"],
                                "default": "System.Data.SqlClient"
                            },
                            "description": {
                                "type": "string",
                                "description": "连接串描述信息",
                                "minLength": 0
                            },
                            "timeout": {
                                "type": "integer",
                                "description": "连接超时（单位：秒）",
                                "minimum": 0,
                                "default": 30
                            },
                            "readonlyConnectionStrings": {
                                "type": "array",
                                "description": "只读的连接串",
                                "items": {
                                    "type": "string",
                                    "minLength": 1
                                }
                            }
                        }
                    }
                },
                "defaultConnection": {
                    "description": "默认的连接名称",
                    "type": "string",
                    "minLength": 1
                }
            }
        }
    }
}